# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/buzznob_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-refresh-token-secret-here"
JWT_REFRESH_EXPIRES_IN="30d"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:8001/api/auth/google/callback"

# Server Configuration
PORT=8001
NODE_ENV="development"

# Redis Configuration (Optional)
REDIS_URL="redis://79.76.106.67:6379"

# Solana Configuration
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"
SOLANA_NETWORK="mainnet-beta"

# File Upload Configuration
MAX_FILE_SIZE="10mb"
UPLOAD_PATH="./uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# App Configuration
APP_NAME="Buzznob"
APP_URL="http://localhost:8001"
FRONTEND_URL="http://localhost:19006"

# Mining Configuration
MINING_BASE_RATE=10
MINING_CYCLE_DURATION=21600000
REFERRAL_BONUS_PERCENTAGE=10

# Points Configuration
POINTS_PER_ARTICLE=10
POINTS_PER_REFERRAL=100
POINTS_PER_REFERRAL_BONUS=50

# KYC Configuration
KYC_REQUIRED=false
KYC_VERIFICATION_REQUIRED=true

# Admin Configuration
ADMIN_EMAIL="admin@buzznob.com"
ADMIN_PASSWORD="admin123"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# Monitoring (Optional)
SENTRY_DSN=""
NEW_RELIC_LICENSE_KEY=""

# Cloudflare R2 Configuration (for image storage)
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="your-bucket-name"
R2_PUBLIC_BASE_URL="https://your-cdn-domain.com"
R2_REGION="auto"