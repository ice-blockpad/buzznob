# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/buzznob_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-refresh-token-secret-here"
JWT_REFRESH_EXPIRES_IN="30d"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:8001/api/auth/google/callback"

# Server Configuration
PORT=8001
NODE_ENV="development"

# Redis Configuration (Optional)
REDIS_URL="redis://localhost:6379"

# Solana Configuration
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"
SOLANA_NETWORK="mainnet-beta"

# File Upload Configuration
MAX_FILE_SIZE="10mb"
UPLOAD_PATH="./uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# App Configuration
APP_NAME="Buzznob"
APP_URL="http://localhost:8001"
FRONTEND_URL="http://localhost:19006"

# CORS Configuration
# Comma-separated list of allowed referral page domains
# Example: ALLOWED_REFERRAL_DOMAINS=http://localhost:3000,https://app.buzznob.xyz,https://referral.buzznob.xyz
ALLOWED_REFERRAL_DOMAINS=""

# Allow all origins in development (set to 'true' to allow all, 'false' or leave empty for restricted)
# WARNING: Only use 'true' in development, never in production
ALLOW_ALL_ORIGINS="false"

# Mining Configuration
MINING_BASE_RATE=10
MINING_CYCLE_DURATION=21600000
REFERRAL_BONUS_PERCENTAGE=10

# Points Configuration
POINTS_PER_ARTICLE=10
POINTS_PER_REFERRAL=100
POINTS_PER_REFERRAL_BONUS=50

# KYC Configuration
KYC_REQUIRED=false
KYC_VERIFICATION_REQUIRED=true

# Admin Configuration
ADMIN_EMAIL="admin@buzznob.com"
ADMIN_PASSWORD="admin123"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# Monitoring (Optional)
SENTRY_DSN=""
NEW_RELIC_LICENSE_KEY=""

# Cloudflare R2 Configuration (for image storage)
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="your-bucket-name"
R2_PUBLIC_BASE_URL="https://your-cdn-domain.com"
R2_REGION="auto"

# News Automation Configuration
# ============================================
# News APIs (Optional - system will use free RSS feeds if not provided)
# Get API keys from: https://newsapi.org, https://newsdata.io, https://currentsapi.services, https://gnews.io

# NewsAPI.org (Priority 1) - https://newsapi.org
NEWSAPI_KEY=""
NEWSAPI_LIMIT=100

# NewsData.io (Priority 2) - https://newsdata.io
NEWSDATA_KEY=""
NEWSDATA_LIMIT=200

# Currents API (Priority 3) - https://currentsapi.services
CURRENTS_API_KEY=""
CURRENTS_LIMIT=20

# GNews API (Priority 4) - https://gnews.io
GNEWS_API_KEY=""
GNEWS_LIMIT=100

# RSS Aggregators (Free tier available)
RSS2JSON_API_KEY=""
RSS2JSON_LIMIT=1000

FEEDAPI_KEY=""
FEEDAPI_LIMIT=1000

# News Fetching Schedule (Cron format)
# Default: Every 6 hours (0 */6 * * *)
# Examples:
#   Every hour: 0 */1 * * *
#   Every 4 hours: 0 */4 * * *
#   Every 12 hours: 0 */12 * * *
#   Daily at midnight: 0 0 * * *
#   4 times daily: 0 0,6,12,18 * * *
NEWS_FETCH_SCHEDULE="0 */6 * * *"

# Max articles to fetch per category per run
NEWS_MAX_ARTICLES_PER_CATEGORY=5